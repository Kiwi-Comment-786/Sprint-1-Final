<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.shrad.kiwicommentapplication.SearchTwo"
    android:scrollbars="vertical">

<ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    app:srcCompat="@drawable/images2" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/phnbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Call"
        android:autoLink="all"/>

    <Button
        android:id="@+id/sharebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Share"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/wbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="WebView"
        android:onClick="goToUrl"/>
</LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Name: Starbucks Nz" />

    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"
        android:text="Phone no= 093029753"
        android:autoLink="all" />

    <TextView
        android:id="@+id/netlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonenumber"
        android:text="Website address: www.starbucks.co.nz"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/netlink"
        android:text="Address: 220 Queen St, Auckland, 1010" />

    <TextView
        android:id="@+id/ratingsTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratings: "
        android:layout_below="@+id/address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getDirectionbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/visitWebsitebtn"
            android:layout_alignStart="@+id/visitWebsitebtn"
            android:layout_below="@+id/visitWebsitebtn"
            android:layout_weight="1"
            android:text="Get Directions" />

        <Button
            android:id="@+id/visitWebsitebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:onClick="goToUrl"
            android:text="Visit Website" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <Button
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Reviews" />

    <Button
        android:id="@+id/writeReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write a Review"
        android:onClick="openReviewAcitivity"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Review 1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.96"
        android:text="Review 2" />
</LinearLayout>

</android.support.v7.widget.FitWindowsLinearLayout>





