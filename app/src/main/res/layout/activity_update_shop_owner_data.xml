<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shrad.kiwicommentapplication.UpdateShopOwnerData">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your id: "
                android:textSize="8pt"
                android:layout_marginLeft="16dp">
            </TextView>
            <EditText
                android:id="@+id/idTxt"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_width="fill_parent"
                android:layout_marginLeft="16dp">
            </EditText>
            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_edit"
                android:onClick="onClicks"/>
            <TextView
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name"
                android:textSize="8pt"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp">
            </TextView>
            <EditText
                android:id="@+id/firstNameTxt"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_width="fill_parent"
                android:layout_marginLeft="16dp"
                android:enabled="false">
            </EditText>
            <TextView
                android:id="@+id/lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last name"
                android:textSize="8pt"
                android:layout_marginLeft="16dp">
            </TextView>
            <EditText
                android:id="@+id/lastNameTxt"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_width="fill_parent"
                android:layout_marginLeft="16dp"
                android:enabled="false">
            </EditText>

            <TextView
                android:id="@+id/mobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile number"
                android:textSize="8pt"
                android:layout_marginLeft="16dp">
            </TextView>
            <EditText
                android:id="@+id/mobileNumberTxt"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_width="fill_parent"
                android:layout_marginLeft="16dp"
                android:enabled="false">
            </EditText>

            <TextView
                android:id="@+id/emailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email address"
                android:textSize="8pt"
                android:layout_marginLeft="16dp"
               >
            </TextView>
            <EditText
                android:id="@+id/emailIdTxt"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_width="fill_parent"
                android:layout_marginLeft="16dp"
                android:enabled="false">
            </EditText>
            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="8pt"
                android:layout_marginLeft="16dp">
            </TextView>
            <EditText
                android:id="@+id/passwordTxt"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_width="fill_parent"
                android:layout_marginLeft="16dp"
                android:enabled="false">
            </EditText>

            <TextView
                android:id="@+id/pinNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIN number for password recovery:"
                android:textSize="8pt"
                android:layout_marginLeft="16dp">
            </TextView>
            <EditText
                android:id="@+id/pinNumberTxt"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_width="fill_parent"
                android:layout_marginLeft="16dp"
                android:enabled="false">
            </EditText>

            <TextView
                android:id="@+id/shopId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your shop id:"
                android:textSize="8pt"
                android:layout_marginLeft="16dp"
                >
            </TextView>
            <EditText
                android:id="@+id/shopidTxt"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_width="fill_parent"
                android:layout_marginLeft="16dp"
                android:enabled="false">
            </EditText>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update data"
                android:id="@+id/btnUpdateData"
                android:onClick="updateData"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign out"
                android:id="@+id/signoutBtn"
                android:onClick="onClicks"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Data"
                android:id="@+id/btnDeleteData"
                app:layout_constraintLeft_toRightOf="@id/btnUpdateData"
                />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
